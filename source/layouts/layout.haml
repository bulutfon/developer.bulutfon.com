!!!5
%html{lang: 'en', class: 'no-js'}
  %head
    %meta{charset: 'utf-8'}/
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}/
    %title= "Bulutfon - #{yield_content :title}"
    %meta{content: '', name: 'description'}/
    %meta{content: '', name: 'keywords'}/

    = stylesheet_link_tag 'style',
                          '//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css'

    = favicon_tag 'favicon.png'

    = yield_content :head

  %body
    %header
      %nav.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
        .container
          .navbar-brand
            %a{href: '#'}
              =link_to 'Bulutfon', '/#', class: 'brand-block'
              =link_to 'Geli≈ütirici', '/#' , class: 'brand-color'
          .navbar-right
            .collapse.navbar-collapse
              %ul.nav.navbar-nav.navbar-right
                %li=link_to 'Teknolojiler','#our-technologies'
                %li=link_to 'API', 'https://github.com/bulutfon/bulutfon-api' , target:'_blank'
                %li=link_to 'Topluluk','/community.html', target:'_blank'

    = yield

    = partial 'layouts/partials/shared/footer'
    = partial 'layouts/partials/shared/foot'

    = javascript_include_tag 'all'